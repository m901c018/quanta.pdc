<!DOCTYPE html>
<html lang="en">

<head>
    <title>PDC-CNS(測試平台)</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Favicon icon -->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
    <!-- fontawesome icon -->
    <link rel="stylesheet" href="~/assets/fonts/fontawesome/css/fontawesome-all.min.css">
    <!-- animation css -->
    <link rel="stylesheet" href="~/assets/plugins/animation/css/animate.min.css">
    <!-- notification css -->
    <link rel="stylesheet" href="~/assets/plugins/notification/css/notification.min.css">
    <!-- vendor css -->
    <link rel="stylesheet" href="~/assets/css/style.css">

    @*<link href="~/assets/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">*@

    <link rel="stylesheet" href="~/assets/css/connect.min.css">
    <link rel="stylesheet" href="~/assets/css/admin2.css">
    <link rel="stylesheet" href="~/assets/css/dark_theme.css">
    <link rel="stylesheet" href="~/assets/css/custom.css">
    <link href="~/assets/css/jquery-ui.min.css" rel="stylesheet" />
    @RenderSection("Styles", false)

</head>

<body class="dark-theme">

    <!-- [ Pre-loader ] start -->
    @await Html.PartialAsync("_Preloader")
    <!-- [ Pre-loader ] End -->
    <!-- [ navigation menu ] start -->
    @*<nav class="pcoded-navbar">
            @await Html.PartialAsync("_Navigation")
        </nav>*@
    <!-- [ navigation menu ] end -->
    <div class="connect-container align-content-stretch d-flex flex-wrap">
        <div class="page-container">
            <!-- [ Header ] start -->
            @await Html.PartialAsync("_Header")
            <!-- [ Header ] end -->

            @await Html.PartialAsync("_Chat")

            <!-- [ Main Content ] start -->
            @RenderBody()
            <!-- [ Main Content ] end -->
        </div>
    </div>

    @if (TempData["TempMsg"] != null)
    {
        <script type="text/javascript">
            setTimeout("alert('@Html.Raw(TempData["TempMsg"])')", 500);
        </script>
        
    }

    <!-- Required Js -->
    <script src="~/assets/js/vendor-all.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/pcoded.min.js"></script>
    <script src="~/assets/plugins/notification/js/bootstrap-growl.min.js"></script>
    <script src="~/assets/js/connect.min.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/js/jquery.blockUI.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery/jquery-ui.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            function notify(message, type) {
                $.growl({
                    message: message
                }, {
                        type: type,
                        allow_dismiss: false,
                        label: 'Cancel',
                        className: 'btn-xs btn-inverse',
                        placement: {
                            from: 'bottom',
                            align: 'right'
                        },
                        delay: 5000,
                        animate: {
                            enter: 'animated fadeInRight',
                            exit: 'animated fadeOutRight'
                        },
                        offset: {
                            x: 30,
                            y: 30
                        }
                    });
            };
            var message = $("#StatusMessage").text();
            if (message) {
                if (message.includes("Error")) {
                    //error
                    notify(message, 'danger');
                } else {
                    //success
                    notify(message, 'success');
                }
            }
        });
    </script>
    @RenderSection("Scripts", false)

</body>

</html>
